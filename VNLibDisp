import tkinter as tk

# Create window
root = tk.Tk()
root.title("My Python App")       # Window title
root.geometry("800x600")          # Size (width x height)

# Optional: Add a label or widgets
label = tk.Label(root, text="Hello, world!", font=("Arial", 24))
label.pack(pady=20)

# Run the app
root.mainloop()
